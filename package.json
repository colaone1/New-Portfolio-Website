{
  "name": "portfolio",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "AI-optimized portfolio website with accessibility and performance focus",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:a11y": "playwright test --project=a11y",
    "test:all": "npm run test && npm run test:e2e && npm run test:a11y",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html --chrome-flags=\"--headless\"",
    "lighthouse:ci": "lhci autorun",
    "lighthouse:mobile": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-mobile-report.html --chrome-flags=\"--headless\" --preset=perf",
    "prepare": "husky",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "analyze": "vite-bundle-analyzer",
    "clean": "rm -rf dist node_modules/.vite",
    "type-check": "tsc --noEmit",
    "performance": "npm run lighthouse && npm run lighthouse:mobile",
    "validate": "npm run lint && npm run format:check && npm run test:all",
    "validate:quick": "npm run validate:html && npm run validate:css && npm run validate:js",
    "validate:full": "npm run validate:quick && npm run validate:integration && npm run validate:accessibility",
    "validate:html": "html-validate index.html",
    "validate:css": "stylelint css/**/*.css",
    "validate:js": "eslint js/**/*.js --ext .js",
    "validate:integration": "npm run test:e2e",
    "validate:accessibility": "npm run test:a11y",
    "validate:performance": "npm run lighthouse",
    "validate:pre-commit": "npm run validate:quick && npm run format:check",
    "test:visual:capture": "playwright test --project=visual-capture",
    "test:visual:compare": "playwright test --project=visual-compare",
    "test:responsive": "playwright test --project=responsive",
    "validate:all": "npm run validate:full && npm run validate:performance && npm run test:visual:compare"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.53.0",
    "eslint": "^9.29.0",
    "html-validate": "^8.20.0",
    "prettier": "^3.5.3",
    "stylelint": "^16.2.0",
    "stylelint-config-standard": "^36.0.0",
    "terser": "^5.43.1",
    "vite": "^5.0.0",
    "vite-imagetools": "^7.1.0",
    "vite-plugin-compression2": "^2.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "portfolio",
    "accessibility",
    "performance",
    "pwa",
    "responsive"
  ],
  "author": "Sam",
  "license": "MIT",
  "dependencies": {
    "gsap": "^3.13.0",
    "isotope-layout": "^3.0.6",
    "just-validate": "^4.3.0",
    "lozad": "^1.16.0"
  }
}

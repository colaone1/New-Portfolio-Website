# AI-OPTIMIZED: EditorConfig for consistent formatting across editors

# Top-level EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single

# CSS files
[*.{css,scss,sass,less}]
indent_size = 2

# HTML files
[*.{html,htm}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Package files
[package.json]
indent_size = 2

# Configuration files
[*.{config.js,config.ts}]
indent_size = 2

# Documentation files
[*.{txt,md,markdown}]
trim_trailing_whitespace = false 